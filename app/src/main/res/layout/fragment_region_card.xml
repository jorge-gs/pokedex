<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:id="@+id/region_card"

    tools:context=".RegionCardFragment"
    app:layoutManager="LinearLayoutManager"

    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:contentPadding="@dimen/card_content_padding"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/region_preview"
            android:scaleType="centerCrop" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/region_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="sans-serif"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/region_preview"
            android:layout_toEndOf="@+id/region_preview"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/region_card"

        tools:context=".RegionCardFragment"
        app:layoutManager="LinearLayoutManager"

        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:contentPadding="@dimen/card_content_padding"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/region_preview" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/region_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/region_preview"
            android:layout_toEndOf="@+id/region_preview"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="sans-serif" />
    </RelativeLayout>
</android.support.v7.widget.CardView>